# SkillBridge Suite - Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these values from your Firebase project console:
# https://console.firebase.google.com/ > Project Settings > General > Your apps

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=1:your_sender_id:web:your_app_id

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# API timeout in milliseconds (optional)
VITE_API_TIMEOUT=30000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application name and version
VITE_APP_NAME=SkillBridge Suite
VITE_APP_VERSION=1.0.0

# Enable/disable debug mode
VITE_DEBUG_MODE=true

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics tracking ID (if using GA)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (if using Sentry)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable/disable specific features
VITE_ENABLE_AI_ROADMAP=true
VITE_ENABLE_JOB_SEARCH=true
VITE_ENABLE_SKILL_ASSESSMENTS=true
VITE_ENABLE_RESUME_ANALYSIS=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# If you want to override backend integrations from frontend
# VITE_ADZUNA_APP_ID=your_adzuna_app_id
# VITE_GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload settings
VITE_HMR_PORT=8080
VITE_HMR_HOST=localhost

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# =============================================================================
# EXAMPLE VALUES (for reference)
# =============================================================================
# Here's what your actual .env file might look like:
#
# VITE_FIREBASE_API_KEY=AIzaSyDPDtHYDAM-Uv0aBcWvdDUYp5ggraOW6A4
# VITE_FIREBASE_AUTH_DOMAIN=skillbridge-suite.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=skillbridge-suite
# VITE_FIREBASE_STORAGE_BUCKET=skillbridge-suite.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=117095901926968420069
# VITE_FIREBASE_APP_ID=1:117095901926968420069:web:abc123def456
# VITE_API_BASE_URL=http://localhost:8000
# VITE_APP_ENV=development
